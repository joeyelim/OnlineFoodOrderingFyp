<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MenuModule.CanteenStoreFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="content_description_media"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/citc_cafe"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/food_app_bar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toTopOf="@+id/rvCanteenStore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_noodles1"
                    android:text="  Noodle  " />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_rice"
                    android:text="   Rice   " />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_hot_chili"
                    android:text="  Spicy  " />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_hot_soup"
                    android:text="Soup" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_vegetarian"
                    android:text="Vegetarian" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_beverage"
                    android:text=" Beverage " />

            </com.google.android.material.tabs.TabLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/nestedScrollView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCanteenStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>