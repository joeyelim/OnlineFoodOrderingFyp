<!--                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />-->

<!--            </com.google.android.material.appbar.CollapsingToolbarLayout>-->
<!--        </com.google.android.material.appbar.AppBarLayout>-->

        <TextView
            android:id="@+id/canteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/canteenImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/canteenImage" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_corner_button"
            app:cornerRadius="180dp"
            android:tint="@color/colorYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_shopping_cart"
            app:strokeColor="@color/colorPrimary" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toTopOf="@+id/srcoll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/canteenImage">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_noodles1"
                    android:text="  Noodle  " />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_rice"
                    android:text="   Rice   " />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_hot_chili"
                    android:text="  Spicy  " />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_hot_soup"
                    android:text="Soup" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_vegetarian"
                    android:text="Vegetarian" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_beverage"
                    android:text=" Beverage " />

            </com.google.android.material.tabs.TabLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/nestedScrollView" />

        <ScrollView
            android:id="@+id/srcoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCanteenStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>