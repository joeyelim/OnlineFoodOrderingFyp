<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardPreventCornerOverlap="false"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:divider="@android:color/transparent"
        android:elevation="8dp"
        app:cardElevation="10dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:clickable="true"
                    android:focusable="true"/>

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:contentDescription="@string/food_image"
                    android:layout_toEndOf="@+id/checkBox"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgFood"
                    android:layout_margin="8dp">

                        <TextView
                            android:id="@+id/canteenName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Canteen"
                            android:textSize="@dimen/sub_title"
                            android:textColor="@color/colorPrimaryDark"
                            />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_delete"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_alignParentRight="true"/>

                    <TextView
                            android:id="@+id/shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shop"
                            android:textSize="@dimen/sub_title"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_below="@+id/canteenName"
                            />

                        <TextView
                            android:id="@+id/foodName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food_name"
                            android:textSize="@dimen/sub_title"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_below="@+id/shop"
                            />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/foodName"
                            android:layout_marginTop="4dp">

                            <ImageButton
                                android:id="@+id/btnMinus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="fitXY"
                                android:layout_marginTop="3dp"
                                app:srcCompat="@drawable/minus"
                                android:contentDescription="Minus Button"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:id="@+id/quantity"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="@string/number"
                                android:textSize="@dimen/sub_title"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_toEndOf="@+id/btnMinus"/>

                            <ImageButton
                                android:id="@+id/btnPlus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="fitXY"
                                android:layout_marginTop="3dp"
                                app:srcCompat="@drawable/square_add_button"
                                android:contentDescription="@string/plus_button"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_toEndOf="@+id/quantity"/>

                            <TextView
                                android:id="@+id/txtFoodPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rm_price"
                                android:textSize="@dimen/sub_title"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_alignParentRight="true"/>


                        </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/imgFood"/>

                <TextView
                    android:id="@+id/txtRemarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/imgFood"
                    android:layout_toEndOf="@+id/txtstart"/>

                <TextView
                    android:id="@+id/txtend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/imgFood"
                    android:layout_toEndOf="@+id/txtRemarks"/>

            </RelativeLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>