<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MenuModule.FoodDetailFragment">

            <ImageView
                android:id="@+id/canteenImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/content_description_media"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/citc_cafe"
                android:background="@drawable/frame_image_view"
                android:cropToPadding="true"
                android:adjustViewBounds="true"
                app:layout_collapseMode="parallax"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imgCart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_corner_button"
                app:cornerRadius="180dp"
                android:tint="@color/colorYellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_shopping_cart"
                app:strokeColor="@color/colorPrimary" />

            <ImageButton
                android:id="@+id/imgStar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_corner_button"
                app:cornerRadius="180dp"
                app:srcCompat="@drawable/ic_star"
                android:tint="@color/colorYellow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:strokeColor="@color/colorPrimary"  />

            <TextView
                android:id="@+id/txtFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/text_view"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/canteenImage" />

            <RelativeLayout
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFood">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:tint="#C4C4C4"
                    app:srcCompat="@drawable/ic_star" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/star1"
                    android:tint="#C4C4C4"
                    app:srcCompat="@drawable/ic_star"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/star2"
                    android:tint="#C4C4C4"
                    app:srcCompat="@drawable/ic_star" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/star3"
                    android:tint="#C4C4C4"
                    app:srcCompat="@drawable/ic_star" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/star4"
                    android:tint="#C4C4C4"
                    app:srcCompat="@drawable/ic_star" />


            </RelativeLayout>

            <TextView
                android:id="@+id/txtReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/xx_review"
                android:textSize="@dimen/content"
                app:layout_constraintStart_toEndOf="@+id/ratingBar"
                app:layout_constraintTop_toBottomOf="@+id/txtFood"/>

            <TextView
                android:id="@+id/txtPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/price"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                app:layout_constraintEnd_toStartOf="@+id/txtSmallPrice"
                app:layout_constraintTop_toBottomOf="@+id/txtReview" />

            <TextView
                android:id="@+id/txtSmallPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/rm_price"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/txtSmallPriceTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtReview" />

            <TextView
                android:id="@+id/txtSmallPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/small"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtReview" />

            <TextView
                android:id="@+id/txtLargePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/rm_price"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/txtLargePriceTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtSmallPrice" />

            <TextView
                android:id="@+id/txtLargePriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/large"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSmallPriceTitle" />

            <View
                android:id="@+id/lineFood"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLargePrice" />

            <TextView
                android:id="@+id/txtLocat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Location      :"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lineFood" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/canteen_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txtLocat"
                app:layout_constraintTop_toBottomOf="@+id/lineFood" />

            <TextView
                android:id="@+id/txtStoret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Store Name :"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLocat" />

            <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/store_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txtStoret"
                app:layout_constraintTop_toBottomOf="@+id/txtLocation" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtStoret">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

<!--                <RelativeLayout-->
<!--                    android:id="@+id/rlCategory"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="16dp"-->
<!--                    android:layout_marginTop="16dp"-->
<!--                    android:background="@drawable/card_bg"-->
<!--                    android:orientation="vertical"-->
<!--                    android:padding="1dp" >-->

<!--                    <ImageView-->
<!--                        android:id="@+id/ic_category"-->
<!--                        android:layout_width="31dp"-->
<!--                        android:layout_height="31dp"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:layout_margin="3dp"-->
<!--                        android:background="@drawable/ic_noodles1"-->
<!--                        android:textColor="@color/colorPrimaryDark"-->
<!--                        android:textSize="20sp" />-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_below="@+id/ic_category"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:layout_marginBottom="3dp"-->
<!--                        android:text="@string/text_view"-->
<!--                        android:textColor="@color/colorPrimaryDark"-->
<!--                        android:textSize="11sp" />-->



<!--                </RelativeLayout>-->
            </LinearLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rlFoodDecs"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/text_field_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container">

                <TextView
                    android:id="@+id/txtFoodDescTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/colorYellow"
                    android:padding="5dp"
                    android:text="Recipe Introduction"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sub_title"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtFoodDescBorder"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:background="@drawable/details_border"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFoodDescTitle" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"

                    app:layout_constraintBottom_toBottomOf="@+id/txtFoodDescBorder"
                    app:layout_constraintEnd_toEndOf="@+id/txtFoodDescBorder"
                    app:layout_constraintStart_toStartOf="@+id/txtFoodDescBorder"
                    app:layout_constraintTop_toTopOf="@+id/txtFoodDescBorder">

                    <TextView
                        android:id="@+id/txtFoodDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vegetarian/vegan cuisine can be delicious, creative and healthy too. The wanton noodle is does not have meat / fish and no egg.  All whole-grain flour in baking, mostly vegan. Some diary would replace with non diary-milk, vegan cheese, and butter."
                        android:textSize="@dimen/content" />

                </androidx.core.widget.NestedScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:text="Add To Cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlFoodDecs" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>